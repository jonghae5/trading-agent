# Database Configuration (SQLite for development)
DATABASE_URL=sqlite:///./trading_agents.db
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# JWT Security Configuration (REQUIRED)
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-here-minimum-32-characters
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin User Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_FULL_NAME=System Administrator

# API Keys (Replace with your actual keys)
OPENAI_API_KEY=sk-your-openai-api-key-here
FINNHUB_API_KEY=your-finnhub-api-key-here
FRED_API_KEY=your-fred-api-key-here

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Application Settings
DEBUG=false
PROJECT_NAME=Trading Agents API
PROJECT_DESC=Advanced AI-powered trading analysis platform
VERSION=1.0.0
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=app.log

# Feature Flags
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
RATE_LIMIT_ENABLED=true
ENABLE_GZIP=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MINUTES=1

# Environment
ENVIRONMENT=production
DEV_MODE=false